<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#5D8AA8" />
            <stroke
                android:width="1dp"
                android:color="#08457E" />
            <corners
                android:radius="3dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#5D8AA8"
                android:endColor="#08457E"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#08457E" />
            <corners
                android:radius="4dp" />
        </shape>
    </item>
</selector>